<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bnilist">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_ams"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_ams"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WilayahKantorActivity"></activity>
        <activity
            android:name=".activity.WpadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.InfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BangunanKpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.BangunanWpadActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.WilayahBangunanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.DetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.KpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.KantorActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>